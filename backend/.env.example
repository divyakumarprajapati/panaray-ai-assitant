# Hugging Face API Key (get from https://huggingface.co/settings/tokens)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Pinecone API Key (get from https://www.pinecone.io/)
PINECONE_API_KEY=your_pinecone_api_key_here

# Pinecone Configuration
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=feature-assistant
PINECONE_DIMENSION=384

# Model Configuration (defaults provided, can override)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_MODEL=meta-llama/Meta-Llama-3-8B-Instruct
EMOTION_MODEL=bhadresh-savani/distilbert-base-uncased-emotion

# API Configuration
API_TITLE=Feature Assistant API
API_VERSION=1.0.0
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# RAG Configuration
TOP_K_RESULTS=3
SIMILARITY_THRESHOLD=0.7
